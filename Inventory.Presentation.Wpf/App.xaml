<Application x:Class="Inventory.Presentation.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Inventory.Presentation.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:Inventory.Presentation.Wpf.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#738e37"/>
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#274b14"/>
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#505e21"/>
            <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#EAA221"/>
            <SolidColorBrush x:Key="MaterialDesign.Brush.TextFieldBoxBackground" Color="White"/>
            <SolidColorBrush x:Key="MaterialDesign.Brush.TextFieldBoxBackground.Disabled" Color="#FFE0E0E0"/>


            <converters:StringListToStringConverter x:Key="StringListConverter"/>

            <Style x:Key="VariantsTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.OnBackground}" />
                <Setter Property="Margin" Value="0,4,0,4"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <SolidColorBrush x:Key="AlternateRowBackground" Color="#FAFAFA"/>
            <Style TargetType="DataGridRow" x:Key="AlternatingRowStyle" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                <Setter Property="Background" Value="{x:Null}" />
                <Style.Triggers>
                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                        <Setter Property="Background" Value="{StaticResource AlternateRowBackground}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>