<UserControl x:Class="Inventory.Presentation.Wpf.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Inventory.Presentation.Wpf.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#dde5d5">

    <UserControl.Resources>

        <sys:Double x:Key="SpacingSmall">6</sys:Double>
        <sys:Double x:Key="SpacingMedium">12</sys:Double>
        <sys:Double x:Key="SpacingLarge">20</sys:Double>

        <Style x:Key="InventoryDataGridStyle"
               TargetType="DataGrid"
               BasedOn="{StaticResource MaterialDesignDataGrid}">
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FFE0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#FFE0E0E0"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF7F7F7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFF0FFF0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource MaterialDesignDataGridColumnHeader}"/>
            <Setter Property="CellStyle" Value="{StaticResource MaterialDesignDataGridCell}"/>
            <Setter Property="RowHeight" Value="42"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Paper}"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.OnSurface}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF3F3F3"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="ActionButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp6"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="ToolIconButton" BasedOn="{StaticResource MaterialDesignToolButton}">
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Storyboard x:Key="RowDetailsEnterStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.22" />
            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)"
                             From="6" To="0" Duration="0:0:0.22" />
        </Storyboard>

        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#274b14"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Inventory Management"
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                           Foreground="#274b14"/>
                <TextBlock Text="View, search, and manage all products."
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Foreground="#738e37"
                           Opacity="0.9"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding NavigateToDashboardCommand}"
                    VerticalAlignment="Center"
                    Foreground="#274b14"
                    Margin="8,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ArrowLeft" Margin="0,0,8,0" />
                    <TextBlock Text="Back to Dashboard"/>
                </StackPanel>
            </Button>
        </Grid>

        <Border Grid.Row="1"
               Background="{DynamicResource MaterialDesign.Brush.Paper}"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#E6E6E6"
                Padding="12"
                Margin="0,0,0,12"
                 materialDesign:ElevationAssist.Elevation="Dp2">

            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Background="#274b14"
                             Foreground="White"
                            Command="{Binding AddItemCommand}"
                            ToolTip="Add a new inventory item.">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="PlusBox" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Item"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding EditItemCommand}"
                            Foreground="#274b14"
                             Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pencil" Margin="0,0,8,0"/>
                            <TextBlock Text="Edit"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding DeleteItemCommand}"
                             Foreground="{DynamicResource MaterialDesign.Brush.Error}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="DeleteOutline" Margin="0,0,8,0"/>
                            <TextBlock Text="Delete"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBox materialDesign:HintAssist.Hint="Search..."
                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                             Width="240"
                             VerticalContentAlignment="Center"
                              Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,8,0"
                             Background="{DynamicResource MaterialDesign.Brush.TextFieldBoxBackground}"/>

                    <ComboBox materialDesign:HintAssist.Hint="Filter by category"
                              ItemsSource="{Binding FilterCategories}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedFilterCategory}"
                               Width="220"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              Margin="0,0,8,0"/>

                    <Button Command="{Binding SearchCommand}"
                            Style="{StaticResource ToolIconButton}"
                            ToolTip="Apply search filters"
                            Margin="0,0,4,0"
                             Foreground="#274b14">
                        <materialDesign:PackIcon Kind="Magnify"/>
                    </Button>

                    <Button Command="{Binding ClearFilterCommand}"
                             Style="{StaticResource ToolIconButton}"
                            ToolTip="Clear filters"
                            Foreground="#505e21">
                        <materialDesign:PackIcon Kind="FilterRemoveOutline"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <materialDesign:Card Grid.Row="2"
                             materialDesign:ElevationAssist.Elevation="Dp2"
                             Padding="0"
                             UniformCornerRadius="8">
            <Grid>
                <DataGrid ItemsSource="{Binding Products}"
                           SelectedItem="{Binding SelectedProduct}"
                          Style="{StaticResource InventoryDataGridStyle}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                           CanUserAddRows="False"
                          CanUserSortColumns="True"
                          materialDesign:DataGridAssist.CellPadding="12 8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                           RowDetailsVisibilityMode="VisibleWhenSelected"
                          Margin="8">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NAME" Binding="{Binding Name}" Width="3*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                        <DataGridTextColumn Header="CATEGORY" Binding="{Binding CategoryName}" Width="1.5*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                        <DataGridTextColumn Header="TOTAL QUANTITY" Binding="{Binding TotalQuantity}" Width="1*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Border Margin="12" Padding="12"
                                    Background="{DynamicResource MaterialDesign.Brush.Background}"
                                     CornerRadius="6"
                                    RenderTransformOrigin="0.5,0">
                                <Border.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Border.RenderTransform>

                                <StackPanel>
                                    <TextBlock Text="Product Variants"
                                               Style="{StaticResource SectionHeader}"/>

                                    <DataGrid ItemsSource="{Binding Variants}"
                                              Style="{StaticResource InventoryDataGridStyle}"
                                               HeadersVisibility="Column"
                                              AutoGenerateColumns="False"
                                               IsReadOnly="True"
                                              CanUserAddRows="False"
                                              materialDesign:DataGridAssist.CellPadding="8 6"
                                               materialDesign:DataGridAssist.ColumnHeaderPadding="6">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="1.5*" MinWidth="120"/>
                                            <DataGridTextColumn Header="VARIATION" Binding="{Binding Variation, Converter={StaticResource StringListConverter}}" Width="2.5*" MinWidth="180"/>
                                            <DataGridTextColumn Header="QUANTITY" Binding="{Binding Quantity}" Width="1.2*" MinWidth="100"/>
                                            <DataGridTextColumn Header="PRICE" Binding="{Binding Price, StringFormat=C}" Width="1.2*" MinWidth="120"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>

                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.22"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)" From="8" To="0" Duration="0:0:0.22"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>